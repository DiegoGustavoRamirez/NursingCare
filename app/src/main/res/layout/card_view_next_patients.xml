<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cv_next_patients"
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_view_next_patients_height"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/card_view_next_patients_margin">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:id="@+id/iv_patient"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_view_next_patients_image_height" android:contentDescription="TODO"/>

        <TextView
                android:id="@+id/tv_patient_name"
                android:layout_alignBottom="@id/iv_patient"
                android:layout_margin="@dimen/card_view_next_patients_text_margin"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/card_view_next_patients_text_height"/>

        <TextView
                android:id="@+id/tv_date"
                android:layout_alignBottom="@id/iv_patient"
                android:layout_margin="@dimen/card_view_next_patients_text_margin"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/card_view_next_patients_text_height"
                android:layout_alignParentRight="true"/>

        <TextView
                android:id="@+id/tv_schedule"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_view_next_patients_text_height"
                android:layout_alignBottom="@id/tv_patient_name"
                android:layout_margin="@dimen/card_view_next_patients_text_margin"/>

        <TextView
                android:id="@+id/tv_direction"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_view_next_patients_text_height"
                android:layout_alignBottom="@id/tv_schedule"
                android:layout_margin="@dimen/card_view_next_patients_text_margin"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>

